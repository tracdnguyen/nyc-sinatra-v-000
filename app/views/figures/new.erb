<form action="/figures" method="POST">
  <p>Name <input type="text" name="figure[name]" id="figure_name"></p> </br>

  <label> Titles </label> </br>
  <% Title.all.each do |t| %>
    <input id="title_<%= t.id %>" type="checkbox" name="figure[title_ids][]" value="title_<%= t.id %>"><%=t.name%></br>
  <% end %>

  <p>Create New Title:</p>

  <input type="text" name="title[name]" id="new_title"> </br>

  </br>
  <label> Landmarks: </label> </br>
  <% Landmark.all.each do |land| %>
    <input id="landmark_<%= land.id %>" type="checkbox" name="figure[landmark_ids][]" value="landmark_<%= land.id %>"><%=land.name%></br>
  <% end %>
  </br>

  <p>Create New Landmark:</p>
  <p>Name <input type="text" name="landmark[name]" id="new_landmark">Year <input type="text" name="landmark[year]"></p>
  <input type="submit" value="Create New Figure">
</form>
