<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></br></br>

  <label>Edit Landmarks:</label></br>

  <% Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>
  </br></br>
  <label>Add Landmark:</label></br>
  <input type="text" name="landmark[name]" id="new_landmark">
  </br></br>
  <label>Edit Titles:</label></br>

  <% Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>"><%=title.name%></input>
  <%end%>
  <label>Add Title:</label></br>
  <input type="text" name="title[name]" id="new_title">

  <input type="submit" value="Edit Figure">
</form>
